<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/liblogo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alex_brush"
        android:text='"Nothing is pleasanter than exploring a library."'
        android:textAlignment="center"
        android:textColor="#AC2323"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/student_layout"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/students" />

            <TextView
                android:id="@+id/student_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textSize="24dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/admin"
                android:layout_width="203dp"
                android:layout_height="165dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/admin" />

            <TextView
                android:id="@+id/admin_login"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:layout_marginStart="16dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

<TextView
    android:id="@+id/creator"
    android:text="                                                      Developed by : Anju"
    android:textSize="18sp"
    android:layout_marginTop="100dp"
    android:textStyle="bold"
    android:textColor="#430303"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</LinearLayout>